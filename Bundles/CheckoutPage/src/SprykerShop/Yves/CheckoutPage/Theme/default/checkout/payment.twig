{% extends "@CheckoutPage/checkout/layout.twig" %}
{% import "@CheckoutPage/checkout/_macros.twig" as checkout %}

{% block title %}
    <h3>{{ 'checkout.step.payment.title' | trans }}</h3>
{% endblock %}

{% block content %}
    <div class="row columns">
        {{ form_start(_view.paymentForm, { attr: { id: 'payment-form' }}) }}

            <div class="callout">
                <ul class="no-bullet">
                    {% for name, choices in _view.paymentForm.paymentSelection.vars.choices %}

                        <h4>{{ ('checkout.payment.provider.' ~ name) | trans }}</h4>

                        {% for key, choice in choices %}
                            <li>  &nbsp;
                                {{ form_widget(_view.paymentForm.paymentSelection[key], {'attr': {'class': '__toggler'}}) }}
                                {{ form_label(_view.paymentForm.paymentSelection[key]) }}
                                <div class="__toggler-target">
                                    <div class="row columns">
                                        {{ checkout.include_subform(_view.paymentForm[_view.paymentForm.paymentSelection[key].vars.value]) }}
                                    </div>
                                </div>
                            </li>
                        {% endfor %}

                    {% endfor %}
                </ul>
            </div>

            <div class="callout">
                <div class="row align-right">
                    <div class="small-12 medium-6 large-4 xlarge-3 columns">
                        <a href="{{ _view.previousStepUrl }}" class="button expanded __no-margin-bottom">{{ 'general.back.button' | trans }}</a>
                    </div>
                    <div class="small-12 medium-6 large-4 xlarge-3 columns">
                        <button type="submit" class="button success expanded __no-margin-bottom">{{ 'checkout.step.summary' | trans }}</button>
                    </div>
                </div>
            </div>

        {{ form_end(_view.paymentForm) }}
    </div>

{% endblock %}
