{% extends template('widget') %}

{% define data = {
    merchant: _widget.merchant,
    locale: app.locale,
} %}

{% block template %}
    {% if data.merchant %}
        {% set merchantUrl = null %}

        {% for urlTransfer in data.merchant.urlCollection %}
            {% if urlTransfer.localeName == data.locale %}
                {% set merchantUrl = urlTransfer.url %}
            {% endif %}
        {% endfor %}

        {% block soldBy %}
            <p>
                {{ 'merchant.sold_by' | trans }} <a href="{{ merchantUrl }}" target="_blank" >{{ data.merchant.name }}</a>
            </p>
        {% endblock %}
    {% endif %}
{% endblock %}
