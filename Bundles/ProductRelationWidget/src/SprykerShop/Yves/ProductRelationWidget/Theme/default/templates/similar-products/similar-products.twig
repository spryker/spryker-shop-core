{% extends template('widget') %}

{% define data = {
    products: [],
    isNewCarouselRenderingEnabled: false,
} %}

{% block body %}
    {% if data.products is not empty %}
        {% set sliderConfig = data.isNewCarouselRenderingEnabled
        ? {
            modifiers: ['inset'],
            data: {
                slides: data.products,
                showDots: false,
            },
            attributes: {
                'slides-to-show': 4,
                'is-new-carousel-rendering-enabled': true,
            },
        } : {
            modifiers: ['inset'],
            class: 'is-hidden-sm-md',
            data: {
                slides: data.products,
                showDots: false,
            },
            attributes: {
                'slides-to-show': 4,
            },
        } %}

        {% embed molecule('simple-carousel') with sliderConfig only %}
            {% block slide %}
                {% widget 'PdpProductRelationWidget' args [slide] only %}
                {% elsewidget 'ProductWidgetPlugin' args [slide] only %} {# @deprecated Use PdpProductRelationWidget instead. #}
                {% endwidget %}
            {% endblock %}
        {% endembed %}

        {% if not data.isNewCarouselRenderingEnabled %}
            {% embed molecule('simple-carousel') with {
                class: 'is-hidden-lg-xl',
                data: {
                    slides: data.products,
                    showDots: false
                },
                attributes: {
                    'slides-to-show': 1
                }
            } only %}
                {% block slide %}
                    {% widget 'PdpProductRelationWidget' args [slide] only %}
                    {% elsewidget 'ProductWidgetPlugin' args [slide] only %} {# @deprecated Use PdpProductRelationWidget instead. #}
                    {% endwidget %}
                {% endblock %}
            {% endembed %}
        {% endif %}
    {% endif %}
{% endblock %}
