{% extends model('component') %}

{% define config = {
    name: 'product-detail',
    tag: 'section'
} %}

{% define data = {
    description: '',
    attributes: []
} %}

{% block body %}
    <h2 class="title--h5">{{ 'product.attribute.long_description' | trans }}</h2>
    <p itemprop="description">{{ data.description }}</p>

    <h2 class="title--h5">{{ 'page.product.details' | trans }}</h2>
    <div class="grid">
        {% for name, value in data.attributes %}
            {% if name %}
                <p class="col col--sm-12 col--md-6 col--lg-4 col--xl-3" itemprop="additionalProperty" itemscope itemtype="https://schema.org/PropertyValue">
                    <strong itemprop="name">{{ ('product.attribute.' ~ name) | trans }}</strong><br>
                    <span itemprop="value">{{ value | join(', ') }}</span>
                </p>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
