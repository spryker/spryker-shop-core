{% extends model('component') %}

{% define config = {
    name: 'shopping-list-item-product-option-display',
    tag: 'ul',
} %}

{% define data = {
    options: null,
} %}

{% block component %}
    {% if data.options is not empty %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block body %}
    {% for option in data.options %}
        <li class="list__item">
            <strong>{{ option.groupName | trans }}:</strong> {{ option.value | trans }}
            <span>{{ (option.unitPrice ?? option.unitGrossPrice) | money }}</span>
        </li>
    {% endfor %}
{% endblock %}
