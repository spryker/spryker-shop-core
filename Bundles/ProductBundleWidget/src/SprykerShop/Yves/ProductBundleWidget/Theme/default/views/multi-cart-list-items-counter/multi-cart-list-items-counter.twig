{% extends template('widget') %}

{% define data = {
    items: _widget.items,
} %}

{% set itemCount = data.items | length %}
{% set label = (itemCount == 1) ? 'page.multi_cart.shopping_cart.list.label.item' : 'page.multi_cart.shopping_cart.list.label.items' %}

{% block body %}
    <span class="cart-items-quantity">
        {{ itemCount | executeFilterIfExists('formatInt', app.locale) }} {{ label | trans }}
    </span>
{% endblock %}
