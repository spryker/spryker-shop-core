{% extends model('component') %}

{% define config = {
    name: 'merchant-relationship-filters',
} %}

{% define data = {
    merchantRelationshipSearchForm: required,
    jsPrefix: required,
} %}

{% block body %}
    <div class="form__fields grid grid--bottom">
        {% for filter in data.merchantRelationshipSearchForm.filters.children %}
            <div class="form__field col col--sm-12 col--lg-6">
                {{ form_row(filter, {
                    attr: {
                        class: data.jsPrefix ~ filter.vars.name ~ '-target',
                    }})
                }}
            </div>
        {% endfor %}

        <div class="form__field col col--right">
            <button name="buttonSubmit" class="button button--success">
                {{ 'merchant_relationship_page.table.filter.apply' | trans }}
            </button>
        </div>
    </div>
{% endblock %}
