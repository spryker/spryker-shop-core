{
    "name": "spryker-shop/chart-widget",
    "type": "library",
    "description": "ChartWidget module",
    "license": "proprietary",
    "require": {
        "php": ">=8.0",
        "spryker/chart": "^1.0.0",
        "spryker/kernel": "^3.30.0",
        "spryker/twig-extension": "^1.0.0"
    },
    "require-dev": {
        "spryker-shop/cms-content-widget-chart-connector": "*",
        "spryker/code-sniffer": "*",
        "spryker/container": "*",
        "spryker/silex": "*",
        "spryker/twig": "*"
    },
    "suggest": {
        "spryker-shop/cms-content-widget-chart-connector": "If you want to use ChartWidgetPlugin: ^1.0.0",
        "spryker/container": "If you want to use Twig Plugins",
        "spryker/silex": "*",
        "spryker/twig": "If you want to use ChartWidgetPlugin: ^3.2.0"
    },
    "autoload": {
        "psr-4": {
            "SprykerShop\\": "src/SprykerShop/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs-check": "phpcs -p -s --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml src/",
        "cs-fix": "phpcbf -p --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
