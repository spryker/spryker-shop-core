{% extends template('widget') %}

{% define data = {
    availability: _widget.availability,
    idSalesOrderItem: _widget.item.idSalesOrderItem,
    checkboxClasses: '',
} %}

{% block body %}
    {% include atom('checkbox') with {
        data: {
            inputClass: data.checkboxClasses,
        },
        attributes: {
            name: 'items[]',
            disabled: not data.availability,
            value: data.idSalesOrderItem,
            'aria-label': 'customer_reorder_widget.aria_label.check.product.to.reorder' | trans({ '%productName%': _widget.item.name }),
        },
    } only %}
{% endblock %}
