{% extends model('component') %}

{% define data = {
    form: required,
    ajaxTriggerAttribute: null,
} %}

{% define config = {
    name: 'order-custom-reference-form',
} %}

{% block body %}
    {% set classTitle = '' %}
    {% set classButton = 'button button--success' %}

    {% block title %}
        <h5 class="{{ classTitle }}">{{ 'order_custom_reference.title' | trans }}</h5>
    {% endblock %}

    {% block form %}
        {% include molecule('form') with {
            data: {
                form: data.form,
                submit: {
                    enable: true,
                    text: 'order_custom_reference.save' | trans,
                    attributes: data.ajaxTriggerAttribute,
                    class: classButton,
                },
                options: {
                    action: path(data.ajaxTriggerAttribute ? 'order-custom-reference/async/save' : 'order-custom-reference/save'),
                },
            },
        } only %}
    {% endblock %}
{% endblock %}
