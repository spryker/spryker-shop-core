{% extends template('page-layout-order-submitted', 'CheckoutPage') %}

{% block content %}
    {% set isUserLoggedIn = is_granted('ROLE_USER') %}
    {% set wrapperClass = "box" %}
    {% set titleClass = "" %}
    {% set messageClass = "" %}
    {% set buttonClass = "button" %}

    {% block contentInner %}
        <div class="{{ wrapperClass }}">
            {% block text %}
                <h3 class="{{ titleClass }}">{{ data.title }}</h3>
                <p class="{{ messageClass }}">{{ data.message }}</p>
            {% endblock %}

            {% block button %}
                {% if isUserLoggedIn %}
                    <a class="{{ buttonClass }}" href="{{ url('customer/overview') }}">{{ 'payment_foreign.go_to_my_account' | trans }}</a>
                {% endif %}
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}
