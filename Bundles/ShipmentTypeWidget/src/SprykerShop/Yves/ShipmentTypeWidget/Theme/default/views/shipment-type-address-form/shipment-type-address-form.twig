{% extends template('widget') %}

{% define data = {
    isVisible: _widget.isVisible,
    shipmentTypeForm: _widget.shipmentTypeForm,
    checkoutAddressForm: _widget.checkoutAddressForm,
    defaultShipmentType: _widget.defaultShipmentType,
    deliveryShipmentTypes: _widget.deliveryShipmentTypes,
    deliveryContainerClassName: '',
    deliverySelectClassName: '',
    billingSameAsShippingContainerClassName: '',
    shipmentTypesClassName: '',
    servicePointClassName: '',
    hideChoices: false,
} %}

{% block body %}
    {% include molecule('shipment-type-toggler', 'ShipmentTypeWidget') with {
        data: {
            shipmentTypeForm: data.shipmentTypeForm,
            checkoutAddressForm: data.checkoutAddressForm,
            shipmentTypesClassName: data.shipmentTypesClassName,
            servicePointClassName: data.servicePointClassName,
            deliverySelectClassName: data.deliverySelectClassName,
            hideChoices: data.hideChoices,
        },
        attributes: {
            'default-shipment-type': data.defaultShipmentType,
            'delivery-shipment-types': data.deliveryShipmentTypes|join(','),
            'delivery-targets-class-name': data.deliveryContainerClassName,
            'billing-same-as-shipping-container-class-name': data.billingSameAsShippingContainerClassName,
        },
    } only %}
{% endblock %}
