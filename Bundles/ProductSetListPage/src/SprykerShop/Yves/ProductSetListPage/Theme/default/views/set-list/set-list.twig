{% extends template('page-layout-main') %}

{% define data = {
    sets: _view.productSets,

    title: 'product.sets' | trans
} %}

{% block content %}
    {% if data.sets is not empty %}
        <div class="grid">
            {% for productSet in data.sets %}
                {% set imageUrl = productSet.imageSets.0.images.0.externalUrlSmall | default('') %}
                {% set imageAltText = productSet.imageSets.0.images.0.altTextSmall | default(productSet.name) %}

                <div class="col col--sm-12 col--lg-4">
                    {% include molecule('card') with {
                        data: {
                            name: productSet.name,
                            url: productSet.url,
                            imageUrl: imageUrl,
                            imageTitle: imageAltText,
                        }
                    } only %}
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="box">
            <p>
                {{ 'product.sets.no-results' | trans }}
            </p>
        </div>
    {% endif %}
{% endblock %}
