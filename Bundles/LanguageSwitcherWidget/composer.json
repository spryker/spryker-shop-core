{
    "name": "spryker-shop/language-switcher-widget",
    "type": "library",
    "description": "LanguageSwitcherWidget module",
    "license": "proprietary",
    "require": {
        "php": ">=8.3",
        "spryker-shop/shop-ui": "^1.0.0",
        "spryker/kernel": "^3.30.0",
        "spryker/locale": "^3.8.0 || ^4.0.0",
        "spryker/url-storage": "^1.0.0"
    },
    "require-dev": {
        "spryker/code-sniffer": "*",
        "spryker/container": "*",
        "spryker/store": "*",
        "spryker/symfony": "*",
        "spryker/testify": "*"
    },
    "suggest": {
        "spryker/symfony": "3.0.0 for using LanguageSwitcherPlugin"
    },
    "autoload": {
        "psr-4": {
            "SprykerShop\\": "src/SprykerShop/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SprykerShopTest\\": "tests/SprykerShopTest/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs-check": "phpcs -p -s --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml src/ tests/",
        "cs-fix": "phpcbf -p --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml src/ tests/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
