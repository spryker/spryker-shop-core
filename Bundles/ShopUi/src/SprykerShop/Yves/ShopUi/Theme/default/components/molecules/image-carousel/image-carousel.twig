{% extends molecule('simple-carousel') %}

{% define config = {
    name: 'image-carousel',
    tag: 'image-carousel',
} %}

{% block extraClass %}
    {{ config.jsName }}
{% endblock %}

{% block component %}
    {% if data.slides %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block slide %}
    {% set imageAltText = slide.altTextLarge ?? slide.altText ?? '' %}
    {% include molecule('lazy-image') with {
        modifiers: ['thumbnail', 'bigger'],
        data: {
            imageSrc: slide.externalUrlLarge,
            imageTitle: imageAltText,
            extraAttributes: {
                itemprop: 'image',
            },
        },
    } only %}
{% endblock %}
