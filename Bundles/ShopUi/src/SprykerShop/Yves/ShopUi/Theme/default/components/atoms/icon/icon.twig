{% extends model('component') %}

{% define config = {
    name: 'icon',
    tag: 'svg',
} %}

{% define data = {
    name: required,
    isSpriteGenerationEnabled: false,
} %}

{% define attributes = {
    title: data.name,
} %}

{% block body %}
    {% if data.isSpriteGenerationEnabled %}
        <use xlink:href="{{ publicPath('icons/sprite.svg#:' ~ data.name) }}"></use>
    {% else %}
        <use xlink:href="#:{{ data.name }}"></use>
    {% endif %}
{% endblock %}
