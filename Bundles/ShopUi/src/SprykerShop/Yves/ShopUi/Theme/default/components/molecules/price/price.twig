{% extends model('component') %}

{% define config = {
    name: 'price',
    tag: 'span'
} %}

{% define data = {
    amount: required,
    originalAmount: null,
    noPriceText: '---'
} %}

{% define attributes = {
    itemscope: '',
    itemprop: 'offers',
    itemtype: 'https://schema.org/Offer',
} %}

{% block body %}
    {% if data.originalAmount is not empty -%}
        <span itemprop="price" class="{{ config.name }}__amount {{ config.name }}__amount--original">{{ data.originalAmount }}</span>
    {%- endif -%}

    {% if data.amount is empty -%}
        {{ data.noPriceText }}
    {%- else -%}
        <span class="{{config.name}}__amount">
            {% include atom('icon') with {
                class: config.name ~ '__tag',
                data: {
                    name: 'tag'
                }
            } only %}
            <span itemprop="price">{{ data.amount }}</span>
        </span>
    {%- endif -%}
{% endblock %}
