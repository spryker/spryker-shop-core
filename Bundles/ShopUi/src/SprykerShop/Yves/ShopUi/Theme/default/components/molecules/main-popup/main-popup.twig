{% extends model('component') %}

{% define config = {
    name: 'main-popup',
    tag: 'main-popup',
} %}

{% define data = {
    content: required,
    title: '',
    closeIconName: 'cross',
    closeButtonTitle: 'global.close' | trans,
} %}

{% define attributes = {
    'content-id': required,
    'trigger-class-name': '',
    'is-open': false,
    'has-content-mount': false,
    'has-content-reload': false,
    'overlay-class-name': 'main-overlay',
    'should-close-by-overlay-click': true,
} %}

{% block body %}
    {% block head %}
        <div class="{{ config.name }}__head">
            {% block title %}
                {% if data.title  %}
                    <h2 class="{{ config.name }}__title">{{ data.title }}</h2>
                {% endif %}
            {% endblock %}

            {% block closeButton %}
                <button class="{{ config.name }}__close {{ config.jsName }}__close" type="button" title="{{ data.closeButtonTitle }}">
                    {% block closeButtonContent %}
                        {% include atom('icon') with {
                            modifiers: ['big'],
                            data: {
                                name: data.closeIconName,
                            },
                        } only %}
                    {% endblock %}
                </button>
            {% endblock %}
        </div>
    {% endblock %}

    {% block content %}
        <div class="{{ config.name }}__content">
            {{ data.content | raw }}
        </div>
    {% endblock %}
{% endblock %}
