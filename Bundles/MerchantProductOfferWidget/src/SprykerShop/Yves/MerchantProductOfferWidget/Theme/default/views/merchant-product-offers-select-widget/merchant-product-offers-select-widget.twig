{% extends template('widget') %}

{# @deprecated property "mounAfterRender" is deprecated: use "mountAfterRender" instead. #}
{% define data = {
    url: _widget.dataUrl,
    id: '',
    submitButtonClassName: '',
    autocompleteFormClassName: '',
    mounAfterRender: false,
    mountAfterRender: data.mounAfterRender | default(false),
} %}

{% block body %}
    {% include molecule('merchant-product-offer-dynamic-form-elements', 'MerchantProductOfferWidget') with {
        data: {
            id: data.id,
            url: url(data.url),
            mountAfterRender: data.mountAfterRender,
        },
        attributes: {
            'autocomplete-form-class-name': data.autocompleteFormClassName,
            'submit-button-class-name': data.submitButtonClassName,
        },
    } only %}
{% endblock %}
