{% extends model('component') %}

{% define config = {
    name: 'cart-quantity-input',
} %}

{% define data = {
    cartItem: required,
    readOnly: false,
    ajaxTriggerAttribute: null,
} %}

{% block body %}
    {% widget 'CartChangeQuantityFormWidget'  args [data.cartItem, data.readOnly] with {
        data: {
            ajaxTriggerAttribute: data.ajaxTriggerAttribute,
        },
    } only %}{% endwidget %}
{% endblock %}
