{% extends template('widget') %}

{% define data = {  
    categories: _widget.categories,
    product: _widget.product
} %}

{% set steps = [] %}
{% for category in data.categories %}
    {% set steps = steps | merge([{
        url: category.url,
        label: category.name,
        itemProp: 'category'
    }]) %}
{% endfor %}
{% set steps = steps | merge([{
    label: data.product.name,
    itemProp: 'product',
    withChevron: false
}]) %}

{% block template %}
    {% if data.categories is not empty %}
        {{parent()}}
    {% endif %}
{% endblock %}

{% block body %}
    {% include molecule('breadcrumb') with {
        data: {
            steps: steps
        }
    } only %}
{% endblock %}
