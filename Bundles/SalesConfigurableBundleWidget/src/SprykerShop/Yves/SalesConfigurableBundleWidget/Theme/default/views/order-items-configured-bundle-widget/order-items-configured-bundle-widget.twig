{% extends template('widget') %}

{% define data = {
    items: _widget.items,
    salesOrderConfiguredBundles: _widget.salesOrderConfiguredBundles,
    checkboxClasses: data.checkboxClasses | default(''),
} %}

{% block body %}
    {% for bundle in data.salesOrderConfiguredBundles %}
        {% block bundleItem %}
            {% include molecule('ordered-configured-bundle', 'SalesConfigurableBundleWidget') with {
                data: {
                    bundle: bundle,
                    items: data.items,
                    checkboxClasses: data.checkboxClasses,
                },
            } only %}
        {% endblock %}
    {% endfor %}
{% endblock %}
