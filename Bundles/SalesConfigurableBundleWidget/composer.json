{
    "name": "spryker-shop/sales-configurable-bundle-widget",
    "type": "library",
    "description": "SalesConfigurableBundleWidget module",
    "license": "proprietary",
    "require": {
        "php": ">=8.0",
        "spryker-shop/customer-reorder-widget-extension": "^1.0.0",
        "spryker-shop/shop-ui": "^1.40.0",
        "spryker/kernel": "^3.33.0",
        "spryker/messenger": "^3.0.0",
        "spryker/sales-configurable-bundle": "^1.3.0",
        "spryker/twig": "^3.18.0"
    },
    "require-dev": {
        "spryker-shop/configurable-bundle-note-widget": "*",
        "spryker/code-sniffer": "*"
    },
    "suggest": {
        "spryker-shop/configurable-bundle-note-widget": "If you want to use configurable bundle note feature."
    },
    "autoload": {
        "psr-4": {
            "SprykerShop\\": "src/SprykerShop/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs-check": "phpcs -p -s --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml src/",
        "cs-fix": "phpcbf -p --standard=vendor/spryker/code-sniffer/Spryker/ruleset.xml src/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
