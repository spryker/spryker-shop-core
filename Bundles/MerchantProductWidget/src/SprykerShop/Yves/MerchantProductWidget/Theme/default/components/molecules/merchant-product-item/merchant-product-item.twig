{% extends model('component') %}

{% define config = {
    name: 'merchant-product-item',
} %}

{% define data = {
    isChecked: false,
    radioGroupName: required,
    merchantReference: required,
    merchantName: required,
    merchantUrl: required,
    price: required,
    currencyIsoCode: required,
    isRadioButtonVisible: false,
} %}

{% block extraClass %} spacing-y{% endblock %}

{% block body %}
    <div class="grid grid--nowrap">
        {% block offerInner %}
            {% block radioCol %}
                {% set radioColVisibilityClass = not data.isRadioButtonVisible ? 'is-hidden' %}

                <div class="col {{ radioColVisibilityClass }}">
                    {% block radio %}
                        {% set selectedAttributes = app.request.get('attribute') | default([]) %}
                        {% set itemAttributes = {
                            'selected_merchant_reference_type': 'merchant_reference',
                            'selected_merchant_reference': data.merchantReference
                        } %}
                        {% set searchParams = {
                            attribute: selectedAttributes | merge(itemAttributes)
                        } | url_encode %}

                        {% include atom('radio') with {
                            class: config.jsName ~ '__trigger-' ~ data.merchantReference,
                            attributes: {
                                checked: data.isChecked,
                                name: data.radioGroupName,
                                value: data.merchantReference,
                            },
                        } only %}

                        {% include molecule('page-location-search-params-updater', 'MerchantProductWidget') with {
                            attributes: {
                                'trigger-class': config.jsName ~ '__trigger-' ~ data.merchantReference,
                                'search-params': searchParams,
                            },
                        } only %}
                    {% endblock %}
                </div>
            {% endblock %}

            {% block contentCol %}
                <div class="col col--expand">
                    {% block content %}
                        <div class="grid grid--justify grid--nowrap">
                            {% block contentInner %}
                                {% block merchantInfoCol %}
                                    <div class="col col--expand">
                                        {% block merchantName %}
                                            <div>
                                                <strong>{{ data.merchantName }}</strong>
                                            </div>
                                        {% endblock %}

                                        {% block merchantLink %}
                                            <a class="link link--small" href="{{ data.merchantUrl }}">
                                                {{ 'merchant_product_offer.view_seller' | trans }}
                                            </a>
                                        {% endblock %}

                                        {% block merchantRelationRequestCreateButton %}
                                            <div>
                                                {% if data.merchantReference is not null %}
                                                    {% widget 'MerchantRelationRequestCreateLinkWidget' args [data.merchantReference] only %}
                                                    {% endwidget %}
                                                {% endif %}
                                            </div>
                                        {% endblock %}
                                    </div>
                                {% endblock %}

                                {% block priceCol %}
                                    <div class="col {% if data.merchantReference is not null %}text-right{% endif %}">
                                        {% block price %}
                                            <div>
                                                <strong>{{ data.price | money(true, data.currencyIsoCode) }}</strong>
                                            </div>
                                        {% endblock %}
                                    </div>
                                {% endblock %}
                            {% endblock %}
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}
        {% endblock %}
    </div>
{% endblock %}
