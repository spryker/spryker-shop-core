{#
@var merchantRelationship \Generated\Shared\Transfer\MerchantRelationshipTransfer
@var merchantRelationship.merchant \Generated\Shared\Transfer\MerchantTransfer
@var merchantRelationship.ownerCompanyBusinessUnit \Generated\Shared\Transfer\CompanyBusinessUnitTransfer
#}

{% extends template('widget') %}

{% define data = {
    merchantRelationships: _widget.merchantRelationships,
} %}

{% block body %}
    <ul class="merchant-relationship-status-notification__list">
        {% for merchantRelationship in data.merchantRelationships %}
            <li class="merchant-relationship-status-notification__list-item">
                {{ merchantRelationship.merchant.name }} - {{ merchantRelationship.ownerCompanyBusinessUnit.name }}
                <a class="merchant-relationship-status-notification__list-link" href="{{ path('company/merchant-relation/details', {'id-merchant-relationship': merchantRelationship.idMerchantRelationship}) }}">
                    {{'merchant_relationship_widget.merchant_relationship_links_list.view' | trans}}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
